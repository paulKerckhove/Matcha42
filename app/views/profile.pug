              |Submit infos
          div(class='form-group')
            if userinfo.bio != null
              textarea(class='form-control', row='5', name='bioBox', id='commentBox')= userinfo.bio
            else
              textarea(class='form-control', row='5', name='bioBox', id='commentBox')
